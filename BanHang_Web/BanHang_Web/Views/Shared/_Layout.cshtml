@{ 
    int quantity = 0;
    decimal total = 0;
    List<CartViewModel> cvmodels = Context.Session.Get<List<CartViewModel>>("Cart");
    if (cvmodels != default)
    {
        foreach (CartViewModel model in cvmodels)
        {
            quantity += model.Quantity;
            total += model.Price * quantity;
        }
    }

}

